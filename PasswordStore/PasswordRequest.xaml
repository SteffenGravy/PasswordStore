<Window x:Class="PasswordStore.PasswordRequest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Enter master password" Height="140" Width="300">
    <StackPanel Margin="10">
        <Label HorizontalAlignment="Center">Master password:</Label>
        <PasswordBox x:Name="psWord" MaxLength="20" Width="150" Margin="5,0,0,0"/>
        <Button HorizontalAlignment="Center" Click="Button_Click"  Command="{Binding pswCmd}" CommandParameter="{Binding ElementName=psWord}" Margin="0,5,0,0 ">Ok</Button>
    </StackPanel>
</Window>
